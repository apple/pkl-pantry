amends "@io.github.typesafegithub/ActionTypes.pkl"

inputs {
  ["always-auth"] {
    type = "boolean"
  }
  ["node-version"] {
    type = "string"
  }
  ["node-version-file"] {
    type = "string"
  }
  ["architecture"] {
    type = "string"
  }
  ["check-latest"] {
    type = "boolean"
  }
  ["registry-url"] {
    type = "string"
  }
  ["scope"] {
    type = "string"
  }
  ["token"] {
    type = "string"
  }
  ["cache"] {
    type = "enum"
    name = "PackageManager"
    `allowed-values` {
      "npm"
      "yarn"
      "pnpm"
    }
  }
  ["cache-dependency-path"] {
    type = "list"
    separator =
      """


      """
    `list-item` {
      type = "string"
    }
  }
  ["mirror"] {
    type = "string"
  }
  ["mirror-token"] {
    type = "string"
  }
  ["package-manager-cache"] {
    type = "boolean"
  }
}
outputs {
  ["cache-hit"] {
    type = "boolean"
  }
  ["node-version"] {
    type = "string"
  }
}
