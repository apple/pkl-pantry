amends "@io.github.typesafegithub/ActionTypes.pkl"

inputs {
  ["dotnet-version"] {
    type = "string"
  }
  ["dotnet-quality"] {
    type = "enum"
    name = "DotNetQuality"
    `allowed-values` {
      "daily"
      "signed"
      "validated"
      "preview"
      "ga"
    }
  }
  ["global-json-file"] {
    type = "string"
  }
  ["source-url"] {
    type = "string"
  }
  ["owner"] {
    type = "string"
  }
  ["config-file"] {
    type = "string"
  }
  ["cache"] {
    type = "boolean"
  }
  ["cache-dependency-path"] {
    type = "list"
    separator =
      """


      """
    `list-item` {
      type = "string"
    }
  }
}
outputs {
  ["cache-hit"] {
    type = "boolean"
  }
  ["dotnet-version"] {
    type = "string"
  }
}
