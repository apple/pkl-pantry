module io.prometheus.examples.configuration

amends "../Configuration.pkl"

global {
  scrape_timeout = 10.s
}

scrape_configs {
  new {
    job_name = "my-job"
    kubernetes_sd_configs {
      new {
        role = "pod"
      }
    }
    relabel_configs {
      new {
        regex = ".*?"
      }
    }
  }
}

remote_write {
  new {
    url = "https://example.com/remote_write"
    sigv4 {
      region = "us-west-2"
    }
  }
}
