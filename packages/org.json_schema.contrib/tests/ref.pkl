module org.json_schema.contrib.tests.ref

amends "pkl:test"

import "@jsonschema/JsonSchema.pkl"
import "@uri/URI.pkl"
import "../ref.pkl"

facts {
  ["resolveRef()"] {
    local schema: JsonSchema = new {
      properties {
        ["foo"] {
          type = "string"
        }
      }
      definitions {
        ["bar"] {
          properties {
            ["baz"] {
              title = "This is a baz"
              type = "object"
            }
          }
          _inline_ {
            ["bizzy"] {
              type = "array"
            }
          }
        }
      }
    }
    ref.resolveRef(new URI {}, new JsonSchema { $ref = "#/definitions/bar"; $$baseSchema = schema }) == schema.definitions!!["bar"]
    ref.resolveRef(new URI {}, new JsonSchema { $ref = "#/definitions/bar/properties/baz"; $$baseSchema = schema }) == schema.definitions!!["bar"].properties!!["baz"]
    ref.resolveRef(new URI {}, new JsonSchema { $ref = "#/properties/foo"; $$baseSchema = schema }) == schema.properties!!["foo"]
    ref.resolveRef(new URI {}, new JsonSchema { $ref = "#/definitions/bar/bizzy"; $$baseSchema = schema }) == schema.definitions!!["bar"]._inline_!!["bizzy"]
    ref.resolveRef(new URI {}, new JsonSchema { description = "This is a bizzy"; $ref = "#/definitions/bar/bizzy"; $$baseSchema = schema }) == new JsonSchema {
      description = "This is a bizzy"
      type = "array"
    }
  }
}
