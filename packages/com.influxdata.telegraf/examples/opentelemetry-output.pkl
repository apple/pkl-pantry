amends "../Telegraf.pkl"

outputs {
  opentelemetry {
    new {
      service_address = "localhost:4312"
      timeout = 10.s
      tls_ca = "/path/to/ca/cert"
      tls_cert = "/path/to/cert"
      tls_key = "/path/to/key"
      tls_server_name = "tls-server.com"
      compression = "gzip"
      coralogix {
        application = "myapp"
        private_key = "my secret value"
        subsystem = "my subsystem"
      }
      attributes {
        ["service.name"] = "foo"
        ["service.version"] = "1.0.0"
      }
      headers {
        ["x-api-key"] = "my-api-key"
      }
    }
  }
}
