/// Run clippy and annotate the diff with errors and warnings
module com.github.actions.community.`actions-rs`.`clippy-check`.v1.ClippyCheck

extends "@com.github.actions/AbstractTypedStep.pkl"

fixed action: "actions-rs/clippy-check"

fixed version: "v1"

with: With

class With {
  /// GitHub token
  token: String

  /// Toolchain to use (without the `+` sign, ex. `nightly`)
  toolchain: String?

  /// Arguments for the cargo command
  hidden argsList: Listing<String>?

  /// Arguments for the cargo command
  ///
  /// To set as a [Listing], use [argsList].
  args: String? = argsList?.join(" ")

  /// Use cross instead of cargo
  ///
  /// Default if unspecified: `false`
  `use-cross`: Boolean?

  /// Display name of the created GitHub check. Must be unique across several actions-rs/clippy-check invocations.
  ///
  /// Default if unspecified: `"clippy"`
  name: String?
}
