/// Install the Rust toolchain
module com.github.actions.community.`actions-rs`.toolchain.v1.Toolchain

extends "@com.github.actions/AbstractTypedStep.pkl"

fixed action: "actions-rs/toolchain"

fixed version: "v1"

with: With

class With {
  /// Rust toolchain name.
  ///
  /// See https://rust-lang.github.io/rustup/concepts/toolchains.html#toolchain-specification
  ///
  /// If this is not given, the action will try and install the version specified in the `rust-toolchain` file.
  toolchain: String?

  /// Target triple to install for this toolchain
  target: String?

  /// Set installed toolchain as default
  ///
  /// Default if unspecified: `false`
  default: Boolean?

  /// Set installed toolchain as an override for a directory
  ///
  /// Default if unspecified: `false`
  `override`: Boolean?

  /// Name of the group of components to be installed for a new toolchain
  profile: String?

  /// Comma-separated list of components to be additionally installed for a new toolchain
  hidden componentsList: Listing<String>?

  /// Comma-separated list of components to be additionally installed for a new toolchain
  ///
  /// To set as a [Listing], use [componentsList].
  components: String? = componentsList?.join(",")
}
