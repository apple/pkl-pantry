/// Run cargo command
module com.github.actions.community.`actions-rs`.cargo.v1.Cargo

extends "@com.github.actions/AbstractTypedStep.pkl"

fixed action: "actions-rs/cargo"

fixed version: "v1"

with: With

class With {
  /// Cargo command to run (ex. `check` or `build`)
  command: "help"
    | "version"
    | "bench"
    | "build"
    | "check"
    | "clean"
    | "doc"
    | "fetch"
    | "fix"
    | "run"
    | "rustc"
    | "rustdoc"
    | "test"
    | "report"
    | "generate-lockfile"
    | "locate-project"
    | "metadata"
    | "pkgid"
    | "tree"
    | "update"
    | "vendor"
    | "verify-project"
    | "init"
    | "install"
    | "new"
    | "search"
    | "uninstall"
    | "login"
    | "owner"
    | "package"
    | "publish"
    | "yank"

  /// Toolchain to use (without the `+` sign, ex. `nightly`)
  toolchain: String?

  /// Arguments for the cargo command
  hidden argsList: Listing<String>?

  /// Arguments for the cargo command
  ///
  /// To set as a [Listing], use [argsList].
  args: String? = argsList?.join(" ")

  /// Use cross instead of cargo
  ///
  /// Default if unspecified: `false`
  `use-cross`: Boolean?
}
