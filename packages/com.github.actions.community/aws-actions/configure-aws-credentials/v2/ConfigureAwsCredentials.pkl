/// Configure AWS credential and region environment variables for use with the AWS CLI and AWS SDKs
module com.github.actions.community.`aws-actions`.`configure-aws-credentials`.v2.ConfigureAwsCredentials

extends "@com.github.actions/AbstractTypedStep.pkl"

fixed action: "aws-actions/configure-aws-credentials"

fixed version: "v2"

with: With

class With {
  /// The audience to use for the OIDC provider
  ///
  /// Default if unspecified: `"sts.amazonaws.com"`
  audience: String?

  /// AWS Access Key ID. This input is required if running in the GitHub hosted environment. It is optional if running in a self-hosted environment that already has AWS credentials, for example on an EC2 instance.
  `aws-access-key-id`: String?

  /// AWS Secret Access Key. This input is required if running in the GitHub hosted environment. It is optional if running in a self-hosted environment that already has AWS credentials, for example on an EC2 instance.
  `aws-secret-access-key`: String?

  /// AWS Session Token
  `aws-session-token`: String?

  /// AWS Region, e.g. us-east-2
  `aws-region`: String

  /// Whether to set the AWS account ID for these credentials as a secret value, so that it is masked in logs. Valid values are 'true' and 'false'. Defaults to true
  `mask-aws-account-id`: String?

  /// Use the provided credentials to assume an IAM role and configure the Actions environment with the assumed role credentials rather than with the provided credentials
  `role-to-assume`: String?

  /// Use the web identity token file from the provided file system path in order to assume an IAM role using a web identity. E.g., from within an Amazon EKS worker node
  `web-identity-token-file`: String?

  /// Role duration in seconds (default: 6 hours, 1 hour for OIDC/specified aws-session-token)
  `role-duration-seconds`: Int?

  /// Role session name (default: GitHubActions)
  `role-session-name`: String?

  /// The external ID of the role to assume
  `role-external-id`: String?

  /// Skip session tagging during role assumption
  `role-skip-session-tagging`: Boolean?

  /// Proxy to use for the AWS SDK agent
  `http-proxy`: String?

  /// Use existing credentials from the environment to assume a new role
  `role-chaining`: Boolean?

  /// Inline session policy
  `inline-session-policy`: String?

  /// List of managed session policies
  hidden `managed-session-policies-list`: Listing<String>?

  /// List of managed session policies
  ///
  /// To set as a [Listing], use [`managed-session-policies-list`].
  `managed-session-policies`: String? = `managed-session-policies-list`?.join("\n")
}
