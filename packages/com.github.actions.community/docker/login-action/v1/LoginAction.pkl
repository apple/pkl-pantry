/// GitHub Action to login against a Docker registry
module com.github.actions.community.docker.`login-action`.v1.LoginAction

extends "@com.github.actions/AbstractTypedStep.pkl"

fixed action: "docker/login-action"

fixed version: "v1"

with: With

class With {
  /// Server address of Docker registry. If not set then will default to Docker Hub
  registry: String?

  /// Username used to log against the Docker registry
  username: String?

  /// Password or personal access token used to log against the Docker registry
  password: String?

  /// Specifies whether the given registry is ECR (auto, true or false)
  ///
  /// Default if unspecified: `"auto"`
  ecr: Boolean?

  /// Log out from the Docker registry at the end of a job
  ///
  /// Default if unspecified: `"true"`
  logout: Boolean?
}
