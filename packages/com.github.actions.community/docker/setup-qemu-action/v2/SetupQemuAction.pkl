/// Install QEMU static binaries
module com.github.actions.community.docker.`setup-qemu-action`.v2.SetupQemuAction

extends "@com.github.actions/AbstractTypedStep.pkl"

fixed action: "docker/setup-qemu-action"

fixed version: "v2"

with: With

class With {
  /// QEMU static binaries Docker image (e.g. tonistiigi/binfmt:latest)
  ///
  /// Default if unspecified: `"tonistiigi/binfmt:latest"`
  image: String?

  /// Platforms to install (e.g. arm64,riscv64,arm)
  ///
  /// Default if unspecified: `"all"`
  hidden platformsList: Listing<String>?

  /// Platforms to install (e.g. arm64,riscv64,arm)
  ///
  /// Default if unspecified: `"all"`
  ///
  /// To set as a [Listing], use [platformsList].
  platforms: String? = platformsList?.join(",")
}
