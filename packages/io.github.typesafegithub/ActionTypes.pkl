/// Type information for GitHub Actions https://github.com/typesafegithub/github-actions-typing
module io.github.typesafegithub.ActionTypes

/// The inputs of the action.
///
/// https://github.com/typesafegithub/github-actions-typing/blob/main/README.md
inputs: Mapping<String(matches(Regex("^[_a-zA-Z][a-zA-Z0-9_-]*$"))), Property>?

/// The outputs of the action.
///
/// https://github.com/typesafegithub/github-actions-typing/blob/main/README.md
outputs: Mapping<String(matches(Regex("^[_a-zA-Z][a-zA-Z0-9_-]*$"))), Property>?

typealias TypeName = "string" | "boolean" | "integer" | "float" | "enum" | "list"

class Property {
  type: TypeName

  name: String(type is "integer" | "enum")?

  `named-values`: Mapping<String, Int>(type == "integer")?

  separator: String(type == "list")?

  `list-item`: Property(type == "list")?

  `allowed-values`: Listing<String>(type == "enum")?
}

output {
  renderer = new YamlRenderer {}
}
