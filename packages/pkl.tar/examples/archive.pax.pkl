/// Test pax archives, emitting fields that are too large/long for UStar.
amends "archive.pkl"

import ".../File.pkl"

local superLongPathPrefix = List("some/long/prefix").repeat(10).join("/")
local superLongPathParent = List("../../..").repeat(10).join("/")

archive {
  ["\(superLongPathPrefix)/regularFile.txt"] {
    text = "this is a regular file"
  }
  ["\(superLongPathPrefix)/someDir/regularFile.txt"] = this["regularFile.txt"]
  ["\(superLongPathPrefix)/someDir/hardLink.txt"] = new File.Link {
    target = "\(superLongPathParent)/regularFile.txt"
  }
  ["\(superLongPathPrefix)/someDir/symLink.txt"] = new File.SymbolicLink {
    target = "\(superLongPathParent)/regularFile.txt"
  }
  ["\(superLongPathPrefix)/someDir/otherDir"] = new File.Directory {}
}

renderer {
  defaultFileInfo {
    uid = 2 ** 21 as UInt
    gid = 2 ** 21 as UInt
    mtime = 1767225600000.123456 // 2026-01-01T00:00:00.123456Z
    uname = "aUserNameLongerThan32EncodedBytes"
    gname = "aGroupNameLongerThan32EncodedBytes"
  }
  pax {
    globalexthdrName = "/tmp/GlobalHead.\(notPid).1"
    globalHeaderFields {
      ["atime"] = File.formatPaxNumber(defaultFileInfo.mtime)
    }
  }
}
