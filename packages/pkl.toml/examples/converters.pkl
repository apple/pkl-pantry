module pkl.toml.examples.converters

import "../toml.pkl"

class Dog {
  breed: String
  sleepTime: Duration
}

dogs {
  new Dog {
    breed = "Golden Retreiver"
    sleepTime = 12.h
  }
  new Dog {
    breed = "GERMAN SHEPHERD"
    sleepTime = 10.h
  }
  new Dog {
    breed = "greyhound"
    sleepTime = 18.h
  }
}

output {
  renderer = new toml.Renderer {
    converters {
      [Dog] = (dog: Dog) -> (dog) {
          breed = dog.breed.toLowerCase()
        }
      [Duration] = (dur: Duration) -> "\(dur.value)\(dur.unit)"
    }
  }
}
