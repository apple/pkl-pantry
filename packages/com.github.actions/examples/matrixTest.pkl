/** gha-fork */
amends "../Workflow.pkl"
import "../catalog.pkl"

name = "Matrix Test"

on {
  push {
    branches {
      "main"
    }
  }
}

jobs {
  ["matrixTest"] {
    `runs-on` = "ubuntu-latest"
    `timeout-minutes` = 5
    strategy {
      matrix {
        ["os"] = new {
          "ubuntu-latest"
          "macos-latest"
          "windows-latest"
        }
        ["somethingElse"] = new {
          new {
            os = "ubuntu-latest"
            runtime = "linux-x64"
          }
          new {
            os = "windows-latest"
            runtime = "windows-x64"
          }
          new {
            os = "macos-latest"
            runtime = "macos-x64"
          }
        }
      }
    }
    steps {
      catalog.`actions/checkout@v6`
      new {
        name = "Run on ${{ matrix.os }}"
        run = "echo Hello World"
      }
    }
  }
}
