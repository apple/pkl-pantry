amends "../Workflow.pkl"

import "../actions/catalog.pkl"

name = "Check prebuild actions"

on {
  push {}
}

jobs {
  ["test-various-actions"] {
    name = "Test actions"
    `runs-on` = "macos-latest"
    steps {
      (catalog.`actions/setup-go@v5`) {
        with {
          `go-version` = "1.17.7"
          `check-latest` = true
        }
      }
      (catalog.`actions/setup-java@v5`) {
        with {
          `java-version` = "17"
          distribution = "temurin"
        }
      }
      (catalog.`actions/cache@v4`) {
        with {
          path = "wiki/README.md"
          key = "wiki-readme-${{ runner.os }}-${{ hashFiles('wiki/generateWikiToc.go') }}"
        }
      }
      (catalog.`actions/upload-pages-artifact@v3`) {
        with {
          path = "tmp-doc"
        }
      }
      (catalog.`actions/deploy-pages@v4`) {
        id = "deployment"
      }
    }
  }
}
