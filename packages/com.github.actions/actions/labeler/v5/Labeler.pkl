/// Automatically label new pull requests based on the paths of files being changed
module com.github.actions.actions.labeler.v5.Labeler

extends ".../AbstractTypedStep.pkl"

fixed action: "actions/labeler"

fixed version: "v5"

with: With

class With {
  /// The GitHub token used to manage labels
  ///
  /// Default if unspecified: `"${{ github.token }}"`
  `repo-token`: String?

  /// The path for the label configurations
  ///
  /// Default if unspecified: `".github/labeler.yml"`
  `configuration-path`: String?

  /// Whether or not to remove labels when matching files are reverted
  ///
  /// Default if unspecified: `false`
  `sync-labels`: Boolean?

  /// Whether or not to auto-include paths starting with dot (e.g. `.github`)
  ///
  /// Default if unspecified: `true`
  dot: Boolean?

  /// The pull request number(s)
  hidden `pr-number-list`: Listing<String>?

  /// The pull request number(s)
  ///
  /// To set as a [Listing], use [`pr-number-list`].
  `pr-number`: String? = `pr-number-list`?.join("\n")
}
