/// Set up a specific version of Python and add the command-line tools to the PATH.
module com.github.actions.actions.`setup-python`.v2.SetupPython

extends ".../AbstractTypedStep.pkl"

fixed action: "actions/setup-python"

fixed version: "v2"

with: With

class With {
  /// Version range or exact version of a Python version to use, using SemVer's version range syntax.
  ///
  /// Default if unspecified: `"3.x"`
  `python-version`: String?

  /// Used to specify a package manager for caching in the default directory. Supported values: pip, pipenv.
  cache: ("pip" | "pipenv")?

  /// The target architecture (x86, x64) of the Python interpreter.
  architecture: ("x64" | "x86")?

  /// Used to pull python distributions from actions/python-versions. Since there's a default, this is typically not supplied by the user.
  ///
  /// Default if unspecified: `"${{ github.token }}"`
  token: String?

  /// Used to specify the path to dependency files. Supports wildcards or a list of file names for caching multiple dependencies.
  hidden `cache-dependency-path-list`: Listing<String>?

  /// Used to specify the path to dependency files. Supports wildcards or a list of file names for caching multiple dependencies.
  ///
  /// To set as a [Listing], use [`cache-dependency-path-list`].
  `cache-dependency-path`: String? = `cache-dependency-path-list`?.join("\n")
}
