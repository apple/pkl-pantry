/// Greet new contributors when they create their first issue or open their first pull request
module com.github.actions.actions.`first-interaction`.v1.FirstInteraction

extends ".../AbstractTypedStep.pkl"

fixed action: "actions/first-interaction"

fixed version: "v1"

with: With

class With {
  /// Token for the repository. Can be passed in using {{ secrets.GITHUB_TOKEN }}
  `repo-token`: String

  /// Comment to post on an individual's first issue
  `issue-message`: String?

  /// Comment to post on an individual's first pull request
  `pr-message`: String?
}
